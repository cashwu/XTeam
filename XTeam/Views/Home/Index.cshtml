@model XTeam.Controllers.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-12">
        <section id="loginForm">

            @using (Html.BeginForm("Index", "Home", FormMethod.Post, new
            {
                @class = "form-horizontal",
                novalidate = "novalidate"
            }))
            {
                <hr>

                @Html.ValidationSummary("", new { @class = "text-danger", style = "font-size: x-large;" })

                <div class="form-group">

                    @Html.LabelFor(a => a.UserName, new { @class = "col-md-2 control-label" })

                    <div class="col-md-10">

                        @Html.TextBoxFor(a => a.UserName, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">

                    @Html.LabelFor(a => a.Password, new { @class = "col-md-2 control-label" })

                    <div class="col-md-10">
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Log in" class="btn btn-default">
                    </div>
                </div>
            }
        </section>
    </div>
</div>    
